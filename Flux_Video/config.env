# Configuration du Système de Vision par Ordinateur
# Hexapode Project

# ============================================================================
# CONFIGURATION RÉSEAU
# ============================================================================

# Adresse IP du PC récepteur (à adapter à votre réseau)
PC_TARGET_IP=10.187.69.179
PC_TARGET_PORT=5555

# Interface réseau Raspberry Pi (eth0 ou wlan0)
RPI_NETWORK_INTERFACE=wlan0

# ============================================================================
# CONFIGURATION CAMÉRA
# ============================================================================

# Index de la caméra (0 pour la première caméra)
CAMERA_INDEX=0

# Résolution de la caméra
CAMERA_WIDTH=1280
CAMERA_HEIGHT=720

# FPS
CAMERA_FPS=30

# ============================================================================
# CONFIGURATION STREAMING
# ============================================================================

# Résolution de redimensionnement (pour optimiser les performances)
STREAM_WIDTH=640
STREAM_HEIGHT=480

# Compression vidéo (0-90, plus haut = meilleur qualité, moins rapide)
JPEG_QUALITY=80

# ============================================================================
# CONFIGURATION MODÈLE IA
# ============================================================================

# Type de modèle (YOLO, TensorFlow, PyTorch, etc.)
AI_MODEL_TYPE=YOLO

# Chemin vers le modèle
AI_MODEL_PATH=./models/model.pt

# Confiance minimale pour une détection
AI_CONFIDENCE_THRESHOLD=0.5

# ============================================================================
# LOGGING
# ============================================================================

# Niveau de logging (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Répertoire des logs
LOG_DIR=./logs

# ============================================================================
# ENREGISTREMENT VIDÉO (PC)
# ============================================================================

# Activer l'enregistrement vidéo
ENABLE_RECORDING=true

# Répertoire de sortie
OUTPUT_DIR=./video_output

# Codec vidéo (mp4v, XVID, MJPG, etc.)
VIDEO_CODEC=mp4v
